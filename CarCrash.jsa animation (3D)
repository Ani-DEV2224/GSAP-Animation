"use client";

import * as THREE from "three";
import { Canvas, useFrame } from "@react-three/fiber";
import { useRef, useState } from "react";
import { gsap } from "gsap";
import { Html } from "@react-three/drei";

export default function CarCrash() {
  return (
    <div className="canvas-container">
      <Canvas camera={{ position: [0, 2, 10] }}>
        <ambientLight intensity={0.5} />
        <directionalLight position={[5, 5, 5]} />
        <CarScene />
      </Canvas>
    </div>
  );
}

function CarScene() {
  const car1Ref = useRef();
  const car2Ref = useRef();
  const explosionRef = useRef();
  const [showLogo, setShowLogo] = useState(false);

  useFrame(() => {
    if (car1Ref.current && car2Ref.current) {
      car1Ref.current.rotation.y = Math.PI;
      car2Ref.current.rotation.y = 0;
    }
  });

  const triggerCrash = () => {
    gsap.to(car1Ref.current.position, {
      x: 0,
      duration: 1.5,
      ease: "power3.out",
    });

    gsap.to(car2Ref.current.position, {
      x: 0,
      duration: 1.5,
      ease: "power3.out",
      onComplete: () => {
        // Explosion effect
        gsap.to(explosionRef.current.scale, {
          x: 2,
          y: 2,
          z: 2,
          duration: 0.5,
          ease: "power2.out",
          onComplete: () => {
            setShowLogo(true);
          },
        });
      },
    });
  };

  return (
    <>
      {/* Car 1 */}
      <mesh ref={car1Ref} position={[-5, 0, 0]}>
        <boxGeometry args={[2, 1, 1]} />
        <meshStandardMaterial color="#2c3d4c" />
      </mesh>

      {/* Car 2 */}
      <mesh ref={car2Ref} position={[5, 0, 0]}>
        <boxGeometry args={[2, 1, 1]} />
        <meshStandardMaterial color="#2c3d4c" />
      </mesh>

      {/* Explosion Effect */}
      <mesh ref={explosionRef} position={[0, 0, 0]} scale={[0, 0, 0]}>
        <sphereGeometry args={[1, 32, 32]} />
        <meshStandardMaterial color="orange" emissive="yellow" />
      </mesh>

      {/* Logo Reveal */}
      {showLogo && (
        <Html center>
          <h1 style={{ color: "#fff", fontSize: "40px" }}>Your Logo</h1>
        </Html>
      )}

      {/* Start Crash Button */}
      <Html position={[0, -3, 0]}>
        <button
          onClick={triggerCrash}
          style={{
            background: "#99b350",
            color: "#fff",
            padding: "10px 20px",
            border: "none",
            cursor: "pointer",
          }}
        >
          Start Crash
        </button>
      </Html>
    </>
  );
}
